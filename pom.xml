        <wildfly.version>14.0.1.Final</wildfly.version>
        <jacoco.version>0.8.1</jacoco.version>
    </properties>
    <scm>
        <connection>scm:git:git@github.com:sbiermann/public-transport-web-api-javaee.git</connection>
        <developerConnection>scm:git:git@github.com:sbiermann/public-transport-web-api-javaee.git</developerConnection>
  </scm>
